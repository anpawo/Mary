operator ** precedence 8 (number n, number power) -> number {
    if power == 0 then
    {
        return 1;
    }
    else
    {
        return n * n ** (power - 1);
    }
}

function factorial(int n) -> int {
    if n < 2 then
    {
        return 1;
    }
    else
    {
        return n * factorial(n - 1);
    }
}
